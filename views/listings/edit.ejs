<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Edit Listing : </h2>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="Listing[title]" class="form-label" value="<%= listing.title %>">
        </div>
        <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <br>
        <textarea class="form-label"name="Listing[desc]"  id="desc" cols="30" rows="2"><%= listing.desc %></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <br><br>
            <input class="form-label"type="text" name="Listing[image.url]" value="<%= listing.image.url %>" >
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
        <input class="form-label"type="number" name="Listing[price]" value="<%= listing.price %>" ><br><br></div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label class="form-label" for="location">Location</label>
        <input class="form-label"type="text" name="Listing[location]" value="<%= listing.location %>" ></div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
        <input class="form-label"type="text" name="Listing[country]" value="<%= listing.country %>"></div></div>
        <button class="btn btn-dark add-btn mt-3">Submit</button>
    </form>
</div>
</div>
