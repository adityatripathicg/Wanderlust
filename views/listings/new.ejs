<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
<h2>Create a New Listing</h2>
<form action="/listings" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" class="form-label" name="Listing[title]" placeholder="Enter Title">
        </div>
        
        <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <br>
        <textarea class="form-label"  name="Listing[desc]" placeholder="Enter description" id="desc" cols="30" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
        <input class="form-label" type="text" name="Listing[image.url]" placeholder="Enter Image URL">
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
        <input class="form-label" type="number" name="Listing[price]" placeholder="Enter price">
        </div>
       <div class="row">
        <div class="mb-3 col-md-4">
            <label class="form-label" for="location">Location</label>
            <input class="form-label" type="text" name="Listing[location]" placeholder="Enter location">
           </div>
           <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input class="form-label" type="text" name="Listing[country]" placeholder="Enter country">
           </div>
       </div>
        <button class="btn btn-dark add-btn mt-3">Submit</button>
</form>
<br><br>
</div>
</div>